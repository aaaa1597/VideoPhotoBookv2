<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogTopView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="20dp">

    <!-- タイトル -->
    <TextView
        android:id="@+id/txt_toptitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/marker_video_binding_settings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="12dp" />

    <!-- マーカー情報 -->
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txt_toptitle"/>
    <TextView
        android:id="@+id/txt_targettitle"
        android:layout_width="wrap_content"
        android:layout_height="24sp"
        android:layout_marginStart="20dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@android:color/white"
        android:text="@string/marker_settings"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/txt_toptitle"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/igv_markerpreview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#F5F5F5"
        android:src="@drawable/m000_star4"
        android:contentDescription="@string/marker_preview"
        app:layout_constraintTop_toBottomOf="@id/txt_targettitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <com.tks.videophotobook.DoubleTapGuideView
        android:id="@+id/viw_double_tap_markerguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="-15dp"
        app:layout_constraintTop_toTopOf="@id/igv_markerpreview"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/txt_targetname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@android:color/white"
        android:text="@string/video_none"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/txt_targettitle"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/viw_disable_marker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#88333333"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/igv_markerpreview"
        app:layout_constraintBottom_toBottomOf="@id/igv_markerpreview"/>

    <!-- 動画情報 -->
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/igv_markerpreview"/>
    <TextView
        android:id="@+id/txt_videotitle"
        android:layout_width="wrap_content"
        android:layout_height="24sp"
        android:layout_marginStart="20dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@android:color/white"
        android:text="@string/video_settings"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/igv_markerpreview"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txt_videoname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@android:color/white"
        android:text="@string/please_choose"
        android:textSize="15sp"
        android:textColor="#000000"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/txt_videotitle"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.tks.videophotobook.settings.VideoThumbnailPlayerView
        android:id="@+id/pyv_video_thumbnail2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/txt_videoname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.tks.videophotobook.DoubleTapGuideView
        android:id="@+id/viw_double_tap_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-15dp"
        app:layout_constraintTop_toTopOf="@id/pyv_video_thumbnail2"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- コメント -->
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/pyv_video_thumbnail2"/>
    <TextView
        android:id="@+id/txt_commenttitle"
        android:layout_width="wrap_content"
        android:layout_height="24sp"
        android:layout_marginStart="20dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@android:color/white"
        android:text="@string/comment"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/pyv_video_thumbnail2"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/comment_freeinput"
        android:inputType="textImeMultiLine"
        android:lines="2"
        android:gravity="top"
        android:background="@android:color/white"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/txt_commenttitle"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/viw_disable_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#88333333"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/etv_comment"
        app:layout_constraintBottom_toBottomOf="@id/etv_comment"/>


    <!-- ボタン群 -->
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dvd_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etv_comment"/>
    <LinearLayout
        android:id="@+id/buttonRow"
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/dvd_divider2"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnCancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="#888888" />

        <Button
            android:id="@+id/btnSave"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="@string/save"
            android:textColor="@android:color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
