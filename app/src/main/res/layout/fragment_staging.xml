<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viw_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEDDFFFF"
    tools:context=".ar.StagingFragment">
<!--    android:background="@drawable/double_rectangle"-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_log"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/list_item_logtxt"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_morphing"
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        app:lottie_rawRes="@raw/morphing"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>